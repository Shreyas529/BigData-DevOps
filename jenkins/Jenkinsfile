pipeline {
    agent any
    
    environment {
        DOCKER_HUB_CREDENTIALS = 'dockerhub-credentials'
        IMAGE_NAME = 'siddharth194/bigdata-devops'
        BACKEND_TAG = 'backend'
        FRONTEND_TAG = 'frontend'
        NAMESPACE = 'bigdata-devops'
        K8S_DIR = 'k8s'
    }
    
    stages {
        stage('Cleanup Previous') {
            steps {
                script {
                    sh '''
                        echo "üßπ Cleaning up previous test containers..."
                        docker compose -p test down -v || true
                        docker system prune -af || true

                        echo "Removing old images for ${IMAGE_NAME}..."
                        docker images --format '{{.Repository}}:{{.Tag}} {{.ID}}' \
                          | awk -v repo="${IMAGE_NAME}" -v prefix="${FRONTEND_TAG}-" '$1 ~ (repo ":" prefix) {print $2}' \
                          | xargs -r docker rmi -f || true

                        docker images --format '{{.Repository}}:{{.Tag}} {{.ID}}' \
                          | awk -v repo="${IMAGE_NAME}" -v prefix="${BACKEND_TAG}-" '$1 ~ (repo ":" prefix) {print $2}' \
                          | xargs -r docker rmi -f || true

                        docker image prune -f || true
                    '''
                }
            }
        }
        
        stage('Checkout') {
            steps {
                echo 'üì• Checking out code from GitHub...'
                git branch: 'main',
                    url: 'https://github.com/Shreyas529/BigData-DevOps.git',
                    credentialsId: 'github-credentials'
            }
        }

        stage('Run Tests') {
            steps {
                echo 'üß™ Running automated tests...'
                script {
                    sh '''
                        docker compose -f docker-compose.test.yml \
                            --project-name test \
                            up --build --abort-on-container-exit --exit-code-from test_runner
                    '''
                }
            }
        }

        stage('Build Images') {
            steps {
                echo 'üî® Building Docker images...'
                script {
                    sh """
                        echo "Building Frontend Image..."
                        docker build -t ${IMAGE_NAME}:${FRONTEND_TAG}-${BUILD_NUMBER} ./frontend
                        docker tag ${IMAGE_NAME}:${FRONTEND_TAG}-${BUILD_NUMBER} ${IMAGE_NAME}:${FRONTEND_TAG}-latest

                        echo "Building Backend Image..."
                        docker build -t ${IMAGE_NAME}:${BACKEND_TAG}-${BUILD_NUMBER} ./backend
                        docker tag ${IMAGE_NAME}:${BACKEND_TAG}-${BUILD_NUMBER} ${IMAGE_NAME}:${BACKEND_TAG}-latest
                    """
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                echo 'üì§ Pushing images to DockerHub...'
                script {
                    withCredentials([usernamePassword(
                        credentialsId: DOCKER_HUB_CREDENTIALS,
                        usernameVariable: 'DOCKER_USER',
                        passwordVariable: 'DOCKER_PASS'
                    )]) {
                        sh """
                            echo \$DOCKER_PASS | docker login -u \$DOCKER_USER --password-stdin

                            echo "Pushing Frontend Image..."
                            docker push ${IMAGE_NAME}:${FRONTEND_TAG}-${BUILD_NUMBER}
                            docker push ${IMAGE_NAME}:${FRONTEND_TAG}-latest

                            echo "Pushing Backend Image..."
                            docker push ${IMAGE_NAME}:${BACKEND_TAG}-${BUILD_NUMBER}
                            docker push ${IMAGE_NAME}:${BACKEND_TAG}-latest

                            docker logout
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo 'üöÄ Deploying to Kubernetes...'
                script {
                    sh """
                        # Create namespace if it doesn't exist
                        kubectl create namespace ${NAMESPACE} --dry-run=client -o yaml | kubectl apply -f -
                        
                        # Apply ConfigMaps and Secrets
                        kubectl apply -f ${K8S_DIR}/postgres-configmap.yaml
                        kubectl apply -f ${K8S_DIR}/postgres-secret.yaml
                        
                        # Deploy Infrastructure (PostgreSQL, Kafka, Zookeeper)
                        echo "üì¶ Deploying PostgreSQL..."
                        kubectl apply -f ${K8S_DIR}/postgres-pvc.yaml
                        kubectl apply -f ${K8S_DIR}/postgres-deployment.yaml
                        
                        echo "üì¶ Deploying Kafka and Zookeeper..."
                        kubectl apply -f ${K8S_DIR}/kafka-deployment.yaml
                        
                        # Wait for PostgreSQL to be ready
                        echo "‚è≥ Waiting for PostgreSQL to be ready..."
                        kubectl wait --for=condition=ready pod -l app=postgres -n ${NAMESPACE} --timeout=300s
                        
                        # Wait for Kafka to be ready
                        echo "‚è≥ Waiting for Kafka to be ready..."
                        kubectl wait --for=condition=ready pod -l app=kafka -n ${NAMESPACE} --timeout=300s
                        
                        # Deploy ELK Stack
                        echo "üì¶ Deploying ELK Stack..."
                        kubectl apply -f ${K8S_DIR}/elasticsearch-deployment.yaml
                        kubectl apply -f ${K8S_DIR}/logstash-deployment.yaml
                        kubectl apply -f ${K8S_DIR}/kibana-deployment.yaml
                        
                        # Wait for Elasticsearch
                        echo "‚è≥ Waiting for Elasticsearch to be ready..."
                        kubectl wait --for=condition=ready pod -l app=elasticsearch -n ${NAMESPACE} --timeout=300s
                        
                        # Update backend deployment with new image
                        echo "üîÑ Updating Backend deployment..."
                        kubectl set image deployment/backend backend=${IMAGE_NAME}:${BACKEND_TAG}-${BUILD_NUMBER} -n ${NAMESPACE} || \
                        kubectl apply -f ${K8S_DIR}/backend-deployment.yaml
                        
                        # Update frontend deployment with new image
                        echo "üîÑ Updating Frontend deployment..."
                        kubectl set image deployment/frontend frontend=${IMAGE_NAME}:${FRONTEND_TAG}-${BUILD_NUMBER} -n ${NAMESPACE} || \
                        kubectl apply -f ${K8S_DIR}/frontend-deployment.yaml
                        
                        # Deploy consumer
                        echo "üì¶ Deploying Consumer..."
                        kubectl apply -f ${K8S_DIR}/consumer-deployment.yaml
                        
                        # Wait for deployments to be ready
                        echo "‚è≥ Waiting for Backend to be ready..."
                        kubectl wait --for=condition=available deployment/backend -n ${NAMESPACE} --timeout=300s
                        
                        echo "‚è≥ Waiting for Frontend to be ready..."
                        kubectl wait --for=condition=available deployment/frontend -n ${NAMESPACE} --timeout=300s
                        
                        echo "‚è≥ Waiting for Consumer to be ready..."
                        kubectl wait --for=condition=available deployment/consumer -n ${NAMESPACE} --timeout=300s
                        
                        # Show deployment status
                        echo "üìä Deployment Status:"
                        kubectl get deployments -n ${NAMESPACE}
                        kubectl get pods -n ${NAMESPACE}
                        kubectl get services -n ${NAMESPACE}
                    """
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                echo '‚úÖ Verifying deployment...'
                script {
                    sh """
                        # Check if all pods are running
                        echo "Checking pod status..."
                        kubectl get pods -n ${NAMESPACE}
                        
                        # Get service endpoints
                        echo "Service endpoints:"
                        kubectl get svc -n ${NAMESPACE}
                        
                        # Check logs for any errors
                        echo "Checking backend logs..."
                        kubectl logs -l app=backend -n ${NAMESPACE} --tail=20 || true
                        
                        echo "Checking frontend logs..."
                        kubectl logs -l app=frontend -n ${NAMESPACE} --tail=20 || true
                    """
                }
            }
        }
    }
    
    post {
        always {
            echo 'üßπ Cleaning up test containers...'
            sh 'docker compose -p test down -v || true'
        }
        success {
            echo '‚úÖ Pipeline completed successfully!'
            echo "üéâ Build ${BUILD_NUMBER} deployed to Kubernetes!"
            script {
                sh """
                    echo "Access your application:"
                    echo "Frontend: kubectl port-forward -n ${NAMESPACE} svc/frontend 8501:8501"
                    echo "Kibana: kubectl port-forward -n ${NAMESPACE} svc/kibana 5601:5601"
                """
            }
        }
        failure {
            echo '‚ùå Pipeline failed!'
            script {
                sh """
                    echo "Debugging information:"
                    kubectl get all -n ${NAMESPACE} || true
                    kubectl describe pods -n ${NAMESPACE} || true
                """
            }
        }
    }
}